{% extends 'front.html.twig' %}

{% block body %}
    <h1>Evenement</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ evenement.id }}</td>
        </tr>
        <tr>
            <th>Nomevenement</th>
            <td>{{ evenement.nomEvenement }}</td>
        </tr>
        <tr>
            <th>Adr</th>
            <td>{{ evenement.adr }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ evenement.description }}</td>
        </tr>
        <tr>
            <th>Datedebut</th>
            <td>{% if evenement.dateDebut %}{{ evenement.dateDebut|date('Y-m-d') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Datefin</th>
            <td>{% if evenement.dateFin %}{{ evenement.dateFin|date('Y-m-d') }}{% endif %}</td>
        </tr>
        </tbody>
    </table>

    <p hidden="hidden"> {{ evenement.description }}</p>

    <ul>
        <li>
            <a href="{{ path('evenement_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('evenement_edit', { 'id': evenement.id }) }}">Edit</a>
        </li>

        <li>
            <a href="{{ path('evenement_delete', { 'id': evenement.id }) }}">delete</a>

        </li>
    </ul>
{% endblock %}
