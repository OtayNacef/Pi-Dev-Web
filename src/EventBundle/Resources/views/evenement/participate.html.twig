            <script src="{{ asset('template/') }}Bootstrap/dist/js/bootstrap.bundle.js"></script>


        <script>
            $(document).ready(function () {
            $('#codeConfirmation').keyup(function (){
                if ( $('#codeConfirmation').val() != '')
                {
                    $.ajax({
                        url: "{{path('envoyerConfirmation')}}",
                        type: "POST",
                        cache: false,
                        data: {
                            "code" : $('#codeConfirmation').val()
                        },
                        success  : function (data) {
                            var id = data['id'];

                            if ( id =='id' ) {
                                $('#codeConfirmation').removeClass('btn btn-block').addClass('btn btn-success');
                            }
                            else {
                                $('#codeConfirmation').removeClass('btn btn-block').addClass('btn btn-danger');

                            }
                        }
                    });
                }
            });});
        </script>





        {% endblock %}

