<!-- Window-popup Event Public -->

{#<div class="modal fade" id="#}{#{{ e.id }}2 #}{#" tabindex="-1" role="dialog" aria-labelledby="public-event" aria-hidden="true">#}
<div class="modal-dialog window-popup event-private-public public-event" role="document">
    <div class="modal-content">
        {#<a href="#" class="close icon-close" data-dismiss="modal" aria-label="Close">#}
        {#<svg class="olymp-close-icon"><use xlink:href="{{ asset('template/') }}svg-icons/sprites/icons.svg#olymp-close-icon"></use></svg>#}
        {#</a>#}
        <div class="modal-body">
            <article class="hentry post has-post-thumbnail thumb-full-width private-event">

                <div class="private-event-head inline-items">
                    <img src="{{ asset('template/') }}img/avatar77-sm.jpg" alt="author">
                    <div class="author-date">
                        <a class="h3 event-title"
                           href="{{ path('evenement_detail',{id:event.id}) }}">{{ event.nomEvenement }}</a>
                        <div class="event__date">
                            <time class="published" datetime="2017-03-24T18:18">
                                {{ event.dateDebut |date() }}
                            </time>
                        </div>
                    </div>
                </div>

                <div class="post-thumb">
                    {#<img src="{{ asset('template/') }}img/event-public.jpg" alt="photo">#}
                    <img src="{{ asset('uploads/image/' ~ event.image) }}" height="100px" width="250px">
                </div>

                <div class="row">
                    <div class="col col-lg-7 col-md-7 col-sm-12 col-12">
                        <div class="post__author author vcard inline-items">
                            <img src="{{ asset('template/') }}img/avatar5-sm.jpg" alt="author">

                            <div class="author-date">
                                <a class="h6 post__author-name fn"
                                   href="{{ path('Compte_homepage',{id:event.id}) }}">{{ event.responsable.username }}</a>
                                created the
                                <a href="{{ path('evenement_detail',{id:event.id}) }}">{{ event.nomEvenement }}</a>
                                <div class="post__date">
                                    {{ event.dateCreation |date("Y-m-d") }}
                                </div>
                            </div>

                        </div>

                        <p>
                            {{ event.description }}
                        </p>
                        <p>
                            <a class="h6 post__author-name fn"> PRICE : </a>
                            {{ event.prix }} DT
                        </p>
                        <p>
                            <a class="h6 post__author-name fn"> NUMBER OF PLACES : </a>
                            {{ event.nbreplace }}
                        </p>

                        <p>
                            <a class="h6 post__author-name fn"> PHONE : </a>
                            {{ event.telresponsable }}
                        </p>
                    </div>
                    <div class="col col-lg-5 col-md-5 col-sm-12 col-12">
                        <div class="event-description">
                            <h6 class="event-description-title">{{ event.type }} Event</h6>
                            <div class="place inline-items">
                                <svg class="olymp-add-a-place-icon">
                                    <use xlink:href="{{ asset('template/') }}svg-icons/sprites/icons.svg#olymp-add-a-place-icon"></use>
                                </svg>
                                <span>{{ event.adr }}</span>
                            </div>

                            <div class="place inline-items">
                                <svg class="olymp-add-a-hour-icon">
                                    <use xlink:href="{{ asset('template/') }}svg-icons/sprites/icons.svg#olymp-add-a-place-icon"></use>
                                </svg>
                                <span><a class="h6 post__author-name fn"> START DATE :</a>
                                         {{ event.dateDebut |date() }}</span>
                                <svg class="olymp-add-a-hour-icon">
                                    <use xlink:href="{{ asset('template/') }}svg-icons/sprites/icons.svg#olymp-add-a-place-icon"></use>
                                </svg>
                                <span><a class="h6 post__author-name fn"> END DATE : </a>

                                        {{ event.dateFin |date() }}</span>
                            </div>


                            <a href="{{ path('participer',{id:event.id}) }}" class="btn btn-blue btn-sm full-width">Participate</a>

                        </div>
                    </div>
                </div>
            </article>
        </div>
    </div>
</div>
