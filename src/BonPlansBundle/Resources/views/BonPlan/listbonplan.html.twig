                                <div class="post-additional-info inline-items">
                                    <li>

                                        <a href="{{ path('like',{'idBonPlan':b.id}) }}">


                                            <img src="{{ asset('template/') }}img/icon-chat27.png" alt="icon">
                                        </a>
                                    </li>
                                    <li>

                                        <a href="{{ path('dislike',{'idBonPlan':b.id}) }}">

                                            <img src="{{ asset('template/') }}img/icon-chat29.png" alt="icon">
                                        </a>
                                    </li>
                                    {% for r in rating %}
                                    <ul class="friends-harmonic">

                                        {% if b.id == r.bonplan.id and r.vote == 0 %}
                                            <li>

                                                <a href="{{ path('undislike',{'idBonPlan':b.id,'idRating':r.id}) }}">

                                                </a>
                                            </li>




                                        {% endif %}


                                        {% if b.id == r.bonplan.id and r.vote == 1 %}
                                    <li>

                                        <a href="{{ path('unlike',{'idBonPlan':b.id,'idRating':r.id}) }}">

                                        </a>
                                    </li>



                                        {% endif %}
                                        {#</ul>#}
                                        {#<div class="names-people-likes">#}
                                        {#26#}
                                        {#</div>#}
                                        {#<ul class="friends-harmonic">#}
                                        {#<li>#}
                                        {#<a href="#">#}
                                        {#<img src="{{ asset('template/') }}img/icon-chat27.png" alt="icon">#}
                                        {#</a>#}
                                        {#</li>#}
                                        {#</ul>#}
                                        {% endfor %}
                                        <div class="names-people-likes">
                                            26
                                        </div>

                                        <div class="comments-shared">
                                            <a href="#" class="post-add-icon inline-items">
                                                <svg class="olymp-speech-balloon-icon">
                                                    <use xlink:href="{{ asset('template/') }}svg-icons/sprites/icons.svg#olymp-speech-balloon-icon"></use>
                                                </svg>
                                                <span>0</span>
                                            </a>
                                        </div>

                                </div>
                            </div>


                        </article>

                        <!-- ... end Post -->

                    </div>
                {% endfor %}
