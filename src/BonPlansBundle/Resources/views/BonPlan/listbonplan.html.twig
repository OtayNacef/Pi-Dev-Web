                {% for b in bonsplans %}

                    <div class="ui-block">


                        <!-- Post -->

                        <article class="hentry blog-post blog-post-v3">

                            <div class="post-thumb">
                                <img src="{{ asset('img/') }}{{ b.image }}">
                                <a href="{{ path('bon_plan_detail',{'id':b.id}) }}"
