{% extends 'front.html.twig' %}

{% block css %}
    <style>
        .divlm{
            display:none;
        }

    </style>

    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/starrating/css/rating.css') }}" />
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
    <script src="{{ asset('bundles/starrating/js/rating.js') }}"></script>
{% endblock %}

{% block content %}

    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Modifier le bon plan</h4>
                </div>
                <div class="modal-body">
                    {{ form_start(edit_form) }}
                    <div class="form-group label-floating">
                        <p>Nom du Ban Plan</p>
                        {{ form_widget(edit_form.name) }}
                    </div>
                    <div class="form-group label-floating">
                        <p>Description</p>
                        {{ form_widget(edit_form.description) }}
                    </div>
                    <div class="form-group label-floating">
                        <p>Téléphone</p>
                        {{ form_widget(edit_form.phone) }}
                    </div>

                    <div class="form-group label-floating">
                        <p>Note pour le Bon Plan</p>
                        {{ form_widget(edit_form.note, {'attr': {'class': 'form-control',
                            'max':'20',
                            'min':'0'

                        }})  }}
                    </div>

                    <div class="form-group label-floating">
                      <p>Adresse</p>
                        {{ form_widget(edit_form.adresse) }}
                    </div>

                    <div class="form-group label-floating">
                        <p>Image</p>
                        {{ form_widget(edit_form.image) }}
                    </div>

                    <div class="form-group label-floating">
                       <p>Prix </p>
                        {{ form_widget(edit_form.prix, {'attr': {'class': 'form-control',
                            'max':'100000',
                            'min':'1'

                        }})  }}
                    </div>
                    <div class="form-group label-floating">
                        <p>Etoile </p>
                        {{ form_widget(edit_form.rating) }}
                    </div>

                        <div class="form-group label-floating">


                            {{ form_widget(edit_form.Modifier) }}
                            {{ form_widget(edit_form.Annuler) }}
                        </div>


                    {{ form_end(edit_form) }}
                </div>
            </div>

                {#<div class="modal-footer">#}
                    {#<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>#}
                {#</div>#}
            </div>

        </div>
    </div>

</div>



    <div class="main-header-post">
        <img src="{{ bonplan.image }}" style="width: 1229px;height: 480px "  alt="author">
    </div>


    <div class="container negative-margin-top150">
        <div class="col col-xl-8 m-auto col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="ui-block">

                <!-- Single Post -->

                <article class="hentry blog-post single-post single-post-v1">


                    {% if (app.user.id == bonplan.user.id) %}
                    <div class="control-block-button post-control-button">
                        <a class="btn btn-secondary btn-1g" data-toggle="modal" data-target="#myModal">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a class="btn btn-danger btn-1g" href="{{ path('bon_plan_supprimer',{'id':bonplan.id}) }}"><i class="fas fa-trash-alt"></i></a>

                    </div>
{% endif %}
                    <div class="">
                        <a href="{{ path('bon_plans_afficher_bon_plan') }}"><i class="fas fa-arrow-left fa-2x"></i></a>
                        <a href="{{ path('user_profil') }} "class="post-category bg-primary">{{ bonplan.user }}</a>

                    </div>

                    <h1 class="post-title">{{ bonplan.name }}</h1>


                    <div class="author-date">
                        <div class="author-thumb">
                            <img alt="author" src="{{ asset('template/') }}img/friend-harmonic7.jpg" class="avatar">
                        </div>
                        by

                        <a class="h6 post__author-name fn" href="{{ path('user_profil') }}">{{ bonplan.user }}</a>
                        <div class="post__date">
                            <time class="published" datetime="2017-03-24T18:18">
                                -  {{ bonplan.datePublication|date() }}

                            </time>
                        </div>

                    </div>


                    <div class="post-content-wrap">


                        <div class="post-content">


                            <h3>Description</h3>

                            {#<p>{{ b.description }}#}
                            {#</p>#}

                            <blockquote>
                                <p>“{{ bonplan.description }}”</p>
                                {#<h6><span>Katherine Lothbrok</span>#}
                                    {#Olympus User</h6>#}


                            </blockquote>

                            <h3>Prix</h3>
                            <p>{{ bonplan.prix }}</p>

                            <h3>Adresse</h3>
                            <p>{{ bonplan.adresse}}</p>

                            <h3>Note</h3>
                            <p>{{ bonplan.note }}</p>
                            <h3>Téléphone</h3>
                            <p>{{ bonplan.phone }}</p>


                            <h3>Etoile</h3>

                            <p>{{ bonplan.rating|rating }}</p>

                        </div>
                    </div>

                    {% include '@FOSComment/Thread/async.html.twig' with {'id': bonplan.id} %}

                </article>

                <!-- ... end Single Post -->




            </div>
        </div>
    </div>







