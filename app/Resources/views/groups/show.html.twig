{% extends 'base.html.twig' %}

{% block body %}
    {{  }}
    <h1>Group</h1>

    <table>
        <tbody>
            <tr>
                <th>Nom User</th>
                <td>{{ group.owner }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ group.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ group.description }}</td>
            </tr>
            <tr>
                <th>Datedecreation</th>
                <td>{% if group.dateDeCreation %}{{ group.dateDeCreation|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('groups_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('groups_edit', { 'id': group.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
